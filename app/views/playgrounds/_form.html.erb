<%= form_with(model: playground) do |form| %>
  <% if playground.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(playground.errors.count, "error") %> playground は保存出来ませんでした:</h2>

      <ul>
        <% playground.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.text_area :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
