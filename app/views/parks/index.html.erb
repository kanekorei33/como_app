<p id="notice"><%= notice %></p>

<h1>Parks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Introduction</th>
      <th>Address</th>
      <th>Prefecture</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Main image</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parks.each do |park| %>
      <tr>
        <td><%= park.name %></td>
        <td><%= park.introduction %></td>
        <td><%= park.address %></td>
        <td><%= park.prefecture %></td>
        <td><%= park.latitude %></td>
        <td><%= park.longitude %></td>
        <td><%= image_tag (park.main_image.url) %></td>

        <% park.playgrounds.each do |playground| %>
        <% #binding.pry %>
          <td><%= playground.name %></td>
        <% end %>

        <td><%= link_to 'Show', park %></td>
        <td><%= link_to 'Edit', edit_park_path(park) %></td>
        <td><%= link_to 'Destroy', park, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

