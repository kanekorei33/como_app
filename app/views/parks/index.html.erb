
<div class="container ">
<p id="notice"><%= notice %></p>

<h1>Parks</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @parks.each do |park| %>
      <tr>
        <td><%= park.name %></td>
        <td><%= park.address %></td>

        <td><%= link_to '見にいく！', park %></td>
        <% if logged_in? %>
          <% if current_user.admin? %>
            <td><%= link_to 'Edit', edit_park_path(park) %></td>
            <td><%= link_to 'Destroy', park, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if logged_in? %>
  <% if current_user.admin? %>
    <%= link_to 'New Park', new_park_path %>
  <% end %>
<% end %>
</div>