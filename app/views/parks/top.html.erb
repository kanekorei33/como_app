<h1>comoのトップページです</h1>







<h2> 遊具から公園を検索！ </h2>

<%= search_form_for @parks_search, url: search_parks_path do |f| %>
  <h4>施設</h4>
  <% Institution.all.each do |institution| %>
    <%= f.check_box :institutions_id_eq_any, { multiple: true, checked: institution[:checked], disabled: institution[:disabled], include_hidden: false }, institution[:id] %>
    <label><%= institution.name %></label>
    <% end %>
  <h4>遊具</h4>
  <% Playground.all.each do |playground|%>
    <%= f.check_box :playgrounds_id_eq_any, { multiple: true, checked: playground[:checked], disabled: playground[:disabled], include_hidden: false }, playground[:id] %>
    <label><%= playground.name %></label>
  <% end %>
  <p><%= f.submit "検索" %></P>
<% end %>

